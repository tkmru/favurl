{
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "ja",

  "version": "1.1.3",
  "icons": {
    "16":  "images/icon16.png",
    "48":  "images/icon48.png",
    "128": "images/icon128.png"
  },
  "manifest_version": 2,

  "options_page" : "options.html",

  "content_scripts": [
    {
      "matches": ["https://api.twitter.com/oauth/authorize"],
      "js": ["library/jquery-2.1.1.min.js", "const.js", "content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_title": "favurl",
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts":  [
      "library/jquery-2.1.1.min.js",
      "library/underscore-min.js",
      "library/sha1.js",
      "library/oauth.js",
      "const.js",
      "twitter.js",
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "https://api.twitter.com/*",
    "http://*/*",
    "background",
    "alarms",
    "contextMenus",
    "tabs"
  ]
}